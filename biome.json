{
	"$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
	"files": {
		"ignoreUnknown": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"rules": {
			"style": {
				"useNamingConvention": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single"
		}
	}
}
